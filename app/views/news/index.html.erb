<p id="notice"><%= notice %></p>

<h1>News</h1>
<p><b><%=News.count %> data </b> Berita </p>
<table class="table table-borderd table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.title %></td>
        <td><%= link_to 'Show', news , :class=>'btn btn-primary' %>
        <%= link_to 'Edit', edit_news_path(news) , :class=>'btn btn-warning'%>
        <%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } ,:class=>'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News', new_news_path, :class=>'btn btn-primary' %>
